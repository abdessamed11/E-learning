@model E_LEARNING.ViewModels.CategoriesViewModel

@{
    ViewData["Title"] = "Create";

}

<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="text-uppercase">new categorie</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" name="name" id="name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SpeakerPicture" class="control-label"></label>
                                <div class="input-group mb-3">
                                    <input asp-for="SpeakerPicture" class="custom-file-input form-control" />
                                    <label class="custom-file-label input-group-text" for="customFile">Choose file</label>
                                </div>
                                <span asp-validation-for="SpeakerPicture" class="text-danger"></span>
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-sm btn-primary rounded-0" />
                        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            console.log(fileName);
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });


    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
