@model E_LEARNING.ViewModels.TitreViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var formation = ViewBag.formation;
}

<h1>Edit</h1>

<h4>Titre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article_art" class="control-label"></label>
                <input asp-for="Article_art" class="form-control" />
                <span asp-validation-for="Article_art" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpeakerPicture" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="SpeakerPicture" class="custom-file-input" />
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="SpeakerPicture" class="text-danger"></span>
                <img src="@FileLocation.RetriveFileFromFolder@Model.ExistingImage" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
            </div>
            <div class="form-group">
                <label asp-for="video_art" class="control-label"></label>
                <input asp-for="video_art" class="form-control" />
                <span asp-validation-for="video_art" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

