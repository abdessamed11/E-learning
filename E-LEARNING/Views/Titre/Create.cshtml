@model E_LEARNING.ViewModels.TitreViewModel

@{
    ViewData["Title"] = "Create";
    
    var form = ViewBag.formation;
    Layout = "~/Views/Shared/_client.cshtml";
}

<h1>Create</h1>

<h4>Article</h4>
<hr />
<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">new article</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SpeakerPicture" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="SpeakerPicture" class="custom-file-input" />
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="SpeakerPicture" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Article_art" class="control-label"></label>
                        <input asp-for="Article_art" class="form-control" />
                        <span asp-validation-for="Article_art" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="video_art" class="control-label"></label>
                        <input asp-for="video_art" class="form-control" />
                        <span asp-validation-for="video_art" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="formationId" class="control-label"></label>
                    <select asp-for="formationId" class="browser-default control-label custom-select">
                        <option selected>Open this select menu</option>
                        @foreach (var time in form)
                        {
                            <option value="@time.Id">@time.Name</option>

                        }

                    </select>
                    <span asp-validation-for="formationId" class="text-danger"></span>
                </div>
                <div class="col-md-6">

                </div>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-sm btn-primary rounded-0" />
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0">Back to List</a>
            </div>
        </form>
    </div>
</div>
<hr/>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });


    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}

