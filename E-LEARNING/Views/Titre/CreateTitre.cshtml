@model E_LEARNING.ViewModels.TitreViewModel

@{
    ViewData["Title"] = "CreateTitre";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    var formation = ViewBag.format;
}

<h1>CreateTitre</h1>

<h4>Titre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTitre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article_art" class="control-label"></label>
                <input asp-for="Article_art" class="form-control" />
                <span asp-validation-for="Article_art" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="video_art" class="control-label"></label>
                <input asp-for="video_art" class="form-control" />
                <span asp-validation-for="video_art" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="formationId" class="control-label"></label>
                <input asp-for="formationId" value="@formation.Id" class="form-control" />
                <span asp-validation-for="formationId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SpeakerPicture" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="SpeakerPicture" class="custom-file-input" />
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <span asp-validation-for="SpeakerPicture" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });


    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}

