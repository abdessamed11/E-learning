@model IEnumerable<E_LEARNING.Models.formation>

@{

    ViewData["Title"] = "formations";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    var recent = ViewBag.formationRecents;
}

<!-- Breadcrumb row END -->
<!-- inner page banner END -->
<main class="ttr-wrapper">
    <div class="container-fluid">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <div class="col-lg-9 col-md-8 col-sm-12">
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-md-6 col-lg-4 col-sm-6 m-b30">
                    <div class="cours-bx">
                        <div class="action-box">
                            <div class="ttr-post-media">
                                <img style="height: 150px;" src="@FileLocation.RetriveFileFromFolder@item.ProfilePicture" width="200" asp-append-version="true" />
                                </div>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn">Read Moree</a>

                            </div>
                        <div class="info-bx text-center">
                            <h5><a href="#">@item.Name</a></h5>
                            <span>@item.categorie.Name</span>
                            <a class="border-2 p-2 bg-blue" asp-action="Detail" asp-route-id="@item.Id">preview</a>
                            <a class="btn btn-success" asp-controller="Titre" asp-action="AddArticle" asp-route-id="@item.Id"><i class="fas fa-plus-square"></i></a>

                        </div>
                        <div class="cours-more-info">
                            <div class="review">
                                <a class="border p-2" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt "></i></a>
                                <a class="border p-2" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash "></i></a>

                            </div>
                            <div class="price">
                                <h5>Gratuitt</h5>
                            </div>
                        </div>
                        
                    </div>
                   
                </div>
                }


                <div class="col-lg-12 m-b20">
                    <div class="pagination-bx rounded-sm gray clearfix">
                        <ul class="pagination">
                            <li class="previous"><a href="#"><i class="ti-arrow-left"></i> Prev</a></li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li class="next"><a href="#">Next <i class="ti-arrow-right"></i></a></li>
                        </ul>
                    </div>
                </div>

            </div>
</main>


